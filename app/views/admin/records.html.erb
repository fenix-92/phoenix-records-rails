<style type="text/css">
  .text-warning{
    color: #895392!important;
  }
  td {
    display: table-cell!important;
    vertical-align: inherit!important;
  }
  .front {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="row">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>ID</th>
                  <th>Image</th>
                  <th>Title</th>
                  <th>Discogs ID</th>
                  <th>Year</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.id %></td>
                    <td>
                      <% if post.front.attached? %>
                        <%= image_tag url_for(post.front), class: "img-fuid front", size: '65x65' %>                      <% else %>
                        <%= image_tag url_for("default.png"), class: "img-fuid front", size: '65x65' %>
                      <% end %>
                    </td>
                    <td><%= post.title %></td>
                    <td><%= post.discogsid %></td>
                    <td><%= post.year %></td>
                    <td>
                      <%= link_to 'Edit', edit_post_path(post) %> Â·
                      <%= link_to 'Delete',  post,  method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-3">
          <div class="card card-stats">
            <div class="card-body table-responsive text-center">
              <h5>Advanced</h5>
              <%= button_to 'New record',{:controller => "posts", :action => "new"} , {:method=>:get, class: 'btn btn-primary'} %>
            </div>
          </div>

    </div>
  </div>
</div>
