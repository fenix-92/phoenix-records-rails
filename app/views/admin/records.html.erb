<style type="text/css">
  .text-warning{
    color: #895392!important;
  }
  td {
    display: table-cell!important;
    vertical-align: inherit!important;
  }
  .front {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <br>
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>ID</th>
                  <th>Artist</th>
                  <th>Title</th>
                  <th>Front</th>
                  <th>Back</th>
                  <th>Media</th>
                  <th>Sleeve</th>
                  <th>Flag</th>
                  <th>Year</th>
                  <th>Special attributes</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @posts.each do |post| %>
                  <tr>
                    <td><%= post.id %></td>
                    <td><%= post.artist.name %></td>
                    <td><%= post.title %></td>
                    <td>
                      <% if post.front.attached? %>
                        <%= image_tag url_for(post.front.variant(resize: '200x200')), class: "img-fuid front", size: '65x65' %>
                      <% else %>
                        <%= image_tag url_for("default.png"), class: "img-fuid front", size: '65x65' %>
                      <% end %>
                    </td>
                    <td>
                      <% if post.back.attached? %>
                        <%= image_tag url_for(post.back.variant(resize: '200x200')), class: "img-fuid front", size: '65x65' %>
                      <% else %>
                        <%= image_tag url_for("default.png"), class: "img-fuid front", size: '65x65' %>
                      <% end %>
                    </td>
                    <td><%= post.media_grading.name %></td>
                    <td><%= post.sleeve_grading.name %></td>

                    <td>
                      <% if post.country.flag.attached? %>
                        <%= image_tag url_for(post.country.flag.variant(resize: '65x65')), class: "img-fuid front" %>
                      <% else %>
                        <%= image_tag url_for("default.png"), class: "img-fuid front", size: '65x65' %>
                      <% end %>
                    </td>
                    <td><%= post.year %></td>
                    <!-- Special attributes -->
                    <td>
                      <% if post.featured? %>
                        <b>Featured</b><br>
                      <% end %>
                    </td>
                    <td>
                      <%= link_to 'Edit', edit_post_path(post) %> Â·
                      <%= link_to 'Delete',  post,  method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
          <div class="card card-stats">
            <div class="card-body table-responsive text-center">
              <h5>Advanced</h5>
              <%= button_to 'New record',{:controller => "posts", :action => "new"} , {:method=>:get, class: 'btn btn-primary'} %>
            </div>
          </div>
       </div>
    </div>
  </div>
