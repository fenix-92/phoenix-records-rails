<style type="text/css">
  .text-warning{
    color: #895392!important;
  }
  td {
    display: table-cell!important;
    vertical-align: inherit!important;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <center><h3>Media grading</h3></center>
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>Name</th>
                  <th>Text</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @media.each do |m| %>
                  <tr>
                    <td><%= m.name %></td>
                    <td><%= m.text %></td>
                    <td><%= link_to 'Delete',  m,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
              <center><%= link_to "New", new_media_grading_path %></center>
          </div>
        </div>
    </div>
    <div class="col-md-6">
      <div class="card card-stats">
        <div class="card-body table-responsive">
          <center><h3>Sleeve grading</h3></center>
          <table class="table table-hover">
            <thead class="text-warning">
              <th>Name</th>
              <th>Text</th>
              <th>Actions</th>
            </thead>
            <tbody>
              <% @sleeve.each do |s| %>
              <tr>
                <td><%= s.name %></td>
                <td><%= s.text %></td>
                <td><%= link_to 'Delete',  s,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <center><%= link_to "New", new_sleeve_grading_path %></center>
      </div>
    </div>
    </div>
  </div>
</div>
