<style type="text/css">
  .text-warning{
    color: #895392!important;
  }
  td {
    display: table-cell!important;
    vertical-align: inherit!important;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-6">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <center><h3>Labels</h3></center>
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>Name</th>
                  <th>Shortname</th>
                  <th>Image</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @labels.each do |c| %>
                  <tr>
                    <td><%= c.name %></td>
                    <td><%= c.long_name %></td>
                    <td>
                      <% if c.image_label.present? %>
                        <%= image_tag c.image_label.admin.url, class: "img-fluid", size: '65x65' %>
                      <% end %>
                    </td>
                    <td><%= link_to 'Delete',  c,  method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
    </div>
    <div class="col-md-6">
      <div class="card card-stats">
        <div class="card-body table-responsive">
          <center><h3>Actions</h3></center>
          <center><%= button_to 'New',{:controller => "record_companies", :action => "new"} , {:method=>:get, class: 'btn btn-primary'} %></center>
        </div>
      </div>
    </div>
  </div>
</div>
