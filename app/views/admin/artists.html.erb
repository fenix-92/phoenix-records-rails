<style>
  .text-warning{
    color: #895392!important;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="row">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>ID</th>
                  <th>Name</th>
                  <th>Discogs ID</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @artists.each do |artist| %>
                  <tr>
                    <td><%= artist.id %></td>
                    <td><%= artist.name %></td>
                    <td><%= artist.discogsid %></td>
                    <td>
                      <%= link_to 'Delete',  artist,  method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-3">
          <div class="card card-stats">
            <div class="card-body table-responsive text-center">
              <h5>Advanced</h5>
              	<%= button_to "New artist", destroy_user_session_path, class: "btn btn-primary" %>
            </div>
          </div>

    </div>
  </div>
</div>
