<style type="text/css">
  .text-warning{
    color: #895392!important;
  }
  td {
    display: table-cell!important;
    vertical-align: inherit!important;
  }
</style>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      <div class="row">
          <div class="card card-stats">
            <div class="card-body table-responsive">
              <table class="table table-hover">
                <thead class="text-warning">
                  <th>ID</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Discogs ID</th>
                  <th>Actions</th>
                </thead>
                <tbody>
                  <% @artists.each do |artist| %>
                  <tr>
                    <td><%= artist.id %></td>
                    <td>
                      <% if artist.artist_image.present? %>
                        <%= image_tag artist.artist_image.admin.url, class: "rounded-circle", size: '65x65' %>
                      <% else %>
                        <%= image_tag url_for("user.png"), class: "rounded-circle", size: '65x65' %>
                      <% end %>
                    </td>
                    <td><%= artist.name %></td>
                    <td><%= artist.discogsid %></td>
                    <td>
                      <%= link_to 'Edit', edit_artist_path(artist) %> Â·
                      <%= link_to 'Delete',  artist,  method: :delete, data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </div>
    <div class="col-md-3">
          <div class="card card-stats">
            <div class="card-body table-responsive text-center">
              <h5>Advanced</h5>
              <%= button_to 'New artist',{:controller => "artists", :action => "new"} , {:method=>:get, class: 'btn btn-primary'} %>
            </div>
          </div>

    </div>
  </div>
</div>
