<div class="posts-container row">
  <div class="col-sm-2" style="margin-left:0px!important">
     <div class="position-sticky sticky-form" style="margin-left: 10px;">
       <h3>Filter</h3>
       <hr style="margin-top: 0px;">
       <%= render 'filters/current' %>
       <%= render 'filters/booleans' %>
       <%= render 'filters/artist' %>
       <%= render 'filters/country' %>
       <%= render 'filters/label' %>
       <%= render 'filters/year' %>
     </div>
   </div>
   <div class="col-sm-10">
  <ul id="Grid">
    <%= render 'post', posts: @posts %>
  </ul>
  <div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
  </div>
  </div>
</div>
