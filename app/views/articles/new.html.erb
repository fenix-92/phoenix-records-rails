</div>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
          <div class="card card-stats">
            <div class="card-body table-responsive" align="center">
              <h2>New post</h2>
              <br>
                <%= form_for :article, url: articles_path do |f| %>
                  <%= f.label :title %>
                  <%= f.text_field :title, :class => "form-control" %><br><br>
                  <%= f.label :subtitle %>
                  <%= f.text_area :subtitle, :class => "form-control" %><br><br>
                  <%= f.label :text %>
                  <%= f.text_area :text, :class => "form-control" %><br><br>
                  <%= f.label :post %>
                  <%= collection_select(:post, :post_id, Post.all, :id, :name, {:prompt => true, :multiple=>false}, {class: "form-control"})  %><br><br>
                  <%= f.submit %>
                <% end %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
