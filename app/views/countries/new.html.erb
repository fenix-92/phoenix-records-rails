<div align="center" class="container">
  <br>
  <h2>New country</h2>
  <br>
    <div class="col-md-4 text-center">
    <%= form_for :country, url: countries_path do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name, :class => "form-control" %><br><br>
      <%= f.label :country_code %><br>
      <%= f.text_field :country_code, :class => "form-control" %><br><br>
      <%= f.label :image_flag %><br>
      <%= f.file_field :image_flag %><br><br>
      <%= f.submit %><br>
    <% end %>
    </div>
</div>
