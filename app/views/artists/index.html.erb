<h1>Artists index</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Discogsid</th>
    <th>Image</th>
    <th>Actions</th>
  </tr>

  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.discogsid %></td>
      <td>
        <% if artist.avatar.attached? %>
         <%= image_tag(url_for(artist.avatar), height: '128', width: 'auto', class: "rounded-circle") %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Show', artist_path(artist) %> ·
        <%= link_to 'Edit', edit_artist_path(artist) %> ·
        <%= link_to 'Destroy', artist, :method => :delete, :confirm => "Are you sure?" %>
      </td>
    </tr>
  <% end %>
</table>
